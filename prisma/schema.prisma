datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String @id @default(uuid())
  github_id Int
  name      String
  login     String

  @@map("users")
  messages Messagem[]
}

model Messagem {
  id          String @id @default(uuid())
  text        String
  create_at   DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map ("messages")
  user_id  String
}
